<html>

<style>
  input, label,button {
            width: 40%;
        }
</style>


<head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

 <body>
  <center><u><h1>Events</h1></u><center></br></br>
    <div class = "col-sm-4">
        <center><h2> New Event </h2></center></br>
        <form class="form"  action="/events" method="post">              
            <div class="form-group">
                <LABEL>Name: </LABEL>
                <input type="text" name="name" id="name"><br>
                <LABEL>Description: </LABEL>
                <input type="text" name="description" id="description"><br>
                <LABEL>Time: </LABEL>
                <input type="text" name="time" id="time"><br>
                <LABEL>Date: </LABEL>
                <input type="text" name="date" id="date"><br>
                <LABEL>Location: </LABEL>
                <input type="text" name="location" id="location"><br>
                <LABEL>Contact Phone: </LABEL>
                <input type="text" name="number" id="number"><br>
                <LABEL>Contact Email: </LABEL>
                <input type="text" name="email" id="email"><br>

            </div>
            <br><br>
            <button type="submit" class="btn btn-success">Create</button>
            
        </form>
    </div>

    <aside>
        <h2>Recent Events</h2>
            <div class = "events">
                <h3><%= eventName ? eventName : '' %></h3>
                <%= eventDesc ? eventDesc : '' %><br>
                <%= eventTime ? eventTime : '' %><br>
                <%= eventDate ? eventDate : '' %><br>
                <%= eventLocation ? eventLocation: '' %><br>
                <%= eventPhone ? eventPhone : '' %><br>
                <%= eventEmail ? eventEmail : '' %><br>
            </div>
    </aside>

  </body>
</html>
